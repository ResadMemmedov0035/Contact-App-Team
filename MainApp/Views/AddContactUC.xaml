<UserControl x:Class="MainApp.Views.AddContactUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MainApp.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             Foreground="Wheat"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignDarkBackground}"
             FontFamily="{DynamicResource MaterialDesignFont}">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="TextBlockKey">
            <Style.Setters>
                <Setter Property="Margin" Value="10"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
            </Style.Setters>
        </Style>
           
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <TextBlock Style="{StaticResource TextBlockKey}">Add First Name</TextBlock>
            <TextBox x:Name="zero"
              Text="{Binding FirstNameProp,
                UpdateSourceTrigger=PropertyChanged,
                ValidatesOnDataErrors=True,
                ValidatesOnNotifyDataErrors=True}"/>
           
            <TextBlock Style="{StaticResource TextBlockKey}">Add Last Name</TextBlock>
            <TextBox Text="{Binding LastNameProp,
                UpdateSourceTrigger=PropertyChanged,
                ValidatesOnDataErrors=True,
                ValidatesOnNotifyDataErrors=True}"/>

            <TextBlock Style="{StaticResource TextBlockKey}">Add Phone Number</TextBlock>
            <TextBox Text="{Binding PhoneNumberProp,
                UpdateSourceTrigger=PropertyChanged,
                ValidatesOnDataErrors=True,
                ValidatesOnNotifyDataErrors=True}"/>

            <TextBlock Style="{StaticResource TextBlockKey}">Add Email Address</TextBlock>
            <TextBox Text="{Binding EmailAdressProp,
                UpdateSourceTrigger=PropertyChanged,
                ValidatesOnDataErrors=True,
                ValidatesOnNotifyDataErrors=True}"/>

            <TextBlock Style="{StaticResource TextBlockKey}">Add Photo Url</TextBlock>
            <TextBox Text="{Binding PhotoProp}"/>

            <TextBlock Style="{StaticResource TextBlockKey}">Add Job</TextBlock>
            <TextBox Text="{Binding JobProp,
                UpdateSourceTrigger=PropertyChanged,
                ValidatesOnDataErrors=True,
                ValidatesOnNotifyDataErrors=True}"/>

            <TextBlock Style="{StaticResource TextBlockKey}">Favorite</TextBlock>
            <CheckBox IsChecked="{Binding FavoriteProp}"/>

            <Button Command="{Binding AddButtonCommand}">Add</Button>
        </StackPanel>
    </Grid>
</UserControl>

