<UserControl x:Class="MainApp.Views.ContactDetailsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MainApp.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             Foreground="Wheat"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignDarkBackground}"
             FontFamily="{DynamicResource MaterialDesignFont}">
    <UniformGrid Rows="0" Columns="0">
        <Border Style="{StaticResource MaterialDesignToolBarMainPanelBorderStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" BorderBrush="Azure" BorderThickness="5">
            <TextBlock Margin="15">
                <TextBlock Text="Number Of Cout Contact" FontSize="45" Style="{DynamicResource MaterialDesignHeadline6TextBlock}"/>
                 <LineBreak/>
                <Run Text="{Binding NumberCount}" FontSize="30" Foreground="OrangeRed" FontStyle="Oblique"/>
                <LineBreak/>
                <LineBreak/>
                <Run Text="Number Of Favorite Contact" FontSize="45" FontWeight="Bold"/>
                <LineBreak/>
                <Run Text="{Binding FavoriteCount}" Foreground="OrangeRed" FontSize="30"/>
            </TextBlock>
        </Border>

        <!--<Border  BorderBrush="BlueViolet" Visibility="Hidden"  Margin="10" BorderThickness="5">
            <TextBlock>
                <Run Text="{Binding NumberCount}"/>
                <LineBreak/>
                <Run Text="{Binding FavoriteCount}"/>
            </TextBlock>
        </Border>-->
    </UniformGrid>
</UserControl>
