<UserControl x:Class="MainApp.Views.ContactDetailsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MainApp.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="570" d:DesignWidth="875"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             Foreground="Wheat"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignDarkBackground}"
             FontFamily="{DynamicResource MaterialDesignFont}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3.6*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border BorderBrush="{StaticResource 
                MaterialDesignBackground}" 
                Margin="5"
                Grid.ColumnSpan="2"
                BorderThickness="5">
            
        </Border>

        <UniformGrid Rows="1" Columns="0">
            
            <TextBlock 
            Text="Number Of Cout Contact:"
            Margin="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="47" Style="{DynamicResource 
            MaterialDesignHeadline6TextBlock}"/>

            <!--<Button Style="{StaticResource MaterialDesignFlatAccentBgButton}">Go To Add Contact</Button>-->
        </UniformGrid>



        <TextBlock Grid.Column="1"
         HorizontalAlignment="Center"
         VerticalAlignment="Center"
         Text="{Binding NumberCount}" 
         FontSize="55"/>

        <Border BorderBrush="{StaticResource 
                MaterialDesignBackground}" 
                Margin="5"
                Grid.Row="1"
                Grid.ColumnSpan="2"
                BorderThickness="5">
        </Border>

        <TextBlock 
            Text="Number Of Favorite Contact:"
            Grid.Row="1"
            Margin="5"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            FontSize="47" Style="{DynamicResource 
            MaterialDesignHeadline6TextBlock}"/>

    </Grid>
</UserControl>

